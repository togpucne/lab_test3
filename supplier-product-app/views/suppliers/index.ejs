<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Suppliers</h1>
    <a href="/suppliers/new" class="btn btn-success">Add New Supplier</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% if (suppliers.length > 0) { %>
                <% suppliers.forEach(supplier => { %>
                <tr>
                    <td><%= supplier.name %></td>
                    <td><%= supplier.address %></td>
                    <td><%= supplier.phone %></td>
                    <td>
                        <a href="/suppliers/<%= supplier._id %>" class="btn btn-sm btn-info">View</a>
                        <a href="/suppliers/<%= supplier._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                        <form action="/suppliers/<%= supplier._id %>?_method=DELETE" method="POST" style="display: inline;" 
                              onsubmit="return confirm('Are you sure you want to delete this supplier?')">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="4" class="text-center">No suppliers found</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>