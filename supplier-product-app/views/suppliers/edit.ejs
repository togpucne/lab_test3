<%- include('../partials/header') %>

<h1>Edit Supplier</h1>

<form action="/suppliers/<%= supplier._id %>?_method=PUT" method="POST">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= supplier.name %>" required>
    </div>
    
    <div class="mb-3">
        <label for="address" class="form-label">Address</label>
        <textarea class="form-control" id="address" name="address" rows="3" required><%= supplier.address %></textarea>
    </div>
    
    <div class="mb-3">
        <label for="phone" class="form-label">Phone</label>
        <input type="tel" class="form-control" id="phone" name="phone" value="<%= supplier.phone %>" required>
    </div>
    
    <button type="submit" class="btn btn-success">Update Supplier</button>
    <a href="/suppliers" class="btn btn-secondary">Cancel</a>
</form>

<%- include('../partials/footer') %>